<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans     
       http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-4.3.xsd
       http://www.springframework.org/schema/mvc
       http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd">

	<!-- Utiliser les annotations liÃ©es au module MVC de Spring -->
	<mvc:annotation-driven enable-matrix-variables="true" />

	<context:component-scan base-package="fr.univ.annuaire.web.controller" />

	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass"
			value="org.springframework.web.servlet.view.JstlView"></property>
		<property name="prefix" value="/WEB-INF/jsp/views/"></property>
		<property name="suffix" value=".jsp"></property>
	</bean>

	<mvc:resources mapping="/ressources/**" location="/WEB-INF/assets/"
		cache-period="100000" />


	<bean name="/actions/login/sign_in" class="fr.univ.annuaire.web.controller.ConnectController" />

</beans>